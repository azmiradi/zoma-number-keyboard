<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrint"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/l_key_4"
            app:layout_constraintEnd_toStartOf="@+id/l_key_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/card_back"
            >
            <Button
                android:id="@+id/key_1"
                style="@style/MaterialButton"
                android:text="@string/key_1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/l_key_5"
            app:layout_constraintEnd_toStartOf="@+id/l_key_3"
            app:layout_constraintStart_toEndOf="@+id/l_key_1"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/card_back"
            >

            <Button
                android:id="@+id/key_2"
                style="@style/MaterialButton"
                android:text="@string/key_2" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/l_key_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/l_key_2"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/card_back"
            >

            <Button
                android:id="@+id/key_3"
                style="@style/MaterialButton"

                android:text="@string/key_3" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/l_key_7"
            app:layout_constraintEnd_toStartOf="@+id/l_key_5"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/card_back"
            app:layout_constraintTop_toBottomOf="@+id/l_key_1">

            <Button
                android:id="@+id/key_4"
                style="@style/MaterialButton"
                android:text="@string/key_4" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/card_back"
            app:layout_constraintBottom_toTopOf="@+id/l_key_8"
            app:layout_constraintEnd_toStartOf="@+id/l_key_6"
            app:layout_constraintStart_toEndOf="@+id/l_key_4"
            app:layout_constraintTop_toBottomOf="@+id/l_key_2">


            <Button
                android:id="@+id/key_5"
                style="@style/MaterialButton"
                android:text="@string/key_5"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/card_back"
            app:layout_constraintBottom_toTopOf="@+id/l_key_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/l_key_5"
            app:layout_constraintTop_toBottomOf="@+id/l_key_3">
            <Button
                android:id="@+id/key_6"
                style="@style/MaterialButton"
                android:text="@string/key_6" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/card_back"
            app:layout_constraintBottom_toTopOf="@+id/l_key_comma"
            app:layout_constraintEnd_toStartOf="@+id/l_key_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_key_4">

            <Button
                android:id="@+id/key_7"
                style="@style/MaterialButton"
                android:text="@string/key_7"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_8"
            android:layout_width="0dp"
            style="@style/card_back"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/l_key_0"
            app:layout_constraintEnd_toStartOf="@+id/l_key_9"
            app:layout_constraintStart_toEndOf="@+id/l_key_7"
            app:layout_constraintTop_toBottomOf="@+id/l_key_5">

            <Button
                android:id="@+id/key_8"
                style="@style/MaterialButton"

                android:text="@string/key_8"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_9"
            android:layout_width="0dp"
            style="@style/card_back"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/l_clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/l_key_8"
            app:layout_constraintTop_toBottomOf="@+id/l_key_6">

            <Button
                android:id="@+id/key_9"
                style="@style/MaterialButton"
                android:text="@string/key_9"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_comma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/card_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/l_key_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_key_7">
            <Button
                android:id="@+id/key_comma"
                style="@style/MaterialButton"
                android:text="@string/key_comma"

                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/l_key_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/card_back"
            app:layout_constraintEnd_toStartOf="@+id/l_clear"
            app:layout_constraintStart_toEndOf="@+id/l_key_comma"
            app:layout_constraintTop_toBottomOf="@+id/l_key_8"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <Button
                android:id="@+id/key_0"
                style="@style/MaterialButton"
                android:text="@string/key_0" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/card_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/l_key_0"
            app:layout_constraintTop_toBottomOf="@+id/l_key_9">
            <Button
                android:id="@+id/clear"
                style="@style/MaterialButton"
                android:text="@string/key_clear" />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>