<resources  >
    <!-- Base application theme. -->
    <style name="Theme.MyApplication"
        parent="Theme.AppCompat.DayNight.DarkActionBar">


    </style>
    <style name="MaterialButton" parent="Widget.AppCompat.Button">
          <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
          <item name="android:layout_gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
      </style>


    <style name="constraint_layout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>
    <style name="card_back" >
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>